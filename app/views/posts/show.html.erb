<div id="post_content">
	<% if @post.image_file_name %>
	<%= image_tag @post.image.url() , class: "" %>
	<% end %>
	<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		โพสเมื่อ : <%= time_ago_in_words(@post.created_at) %>
	</p>
	<p class="body">
		<%= @post.body %>
	</p>
	<% if @post.user_id %>
		<p class="created_by">
		โพสโดย : <%= @post.user.email %>
	</p>
	<% end %>
	<% if user_signed_in? %>
		<%= link_to 'แก้ไข' , edit_post_path(@post) %>
		<%= link_to 'ลบ' , post_path(@post), method: :delete, data: { confirm: 'ต้องการลบ'} %>
	<% end %>
	
</div>