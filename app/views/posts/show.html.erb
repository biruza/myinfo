<div class="row">
		<!-- Blog Content-->
		<div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               <div class="bb">
                  <h2 class="text-lg"><%= @post.title %></h2>
                  <p>Tags: 
                     <% @post.tag_list.each do |tag| %>
                        <%= link_to tag, tag_path(tag), class: "mb-sm btn btn-primary btn-outline btn-xs" %>
                     <% end %>
                  </p> 
                  <p class="clearfix">
                     <span class="pull-left">
                        <small class="mr-sm">
                           โดย 
                           <%= link_to (profile_path(@post.user.id)) do %>
                              <%= @post.user.firstname %> <%= @post.user.surname %>
                           <% end %>
                        </small>
                        <small class="mr-sm">
   		โพสเมื่อ : <%= time_ago_in_words(@post.created_at) %> ที่แล้ว</small>
   					<!--
                        <small>
                           <strong>56</strong>
                           <span>Comments</span>
                        </small>
                    -->
                     </span>
                  </p>
                  <p>
                  	<% if user_signed_in? && (current_user.id == @post.user_id) %>
   					<%= link_to 'แก้ไข' , edit_post_path(@post), class: "btn btn-info" %>
   					<%= link_to 'ลบ' , post_path(@post), method: :delete, data: { confirm: 'ต้องการลบ'}, class: "btn btn-danger" %>
   				<% end %>
                  </p>
               </div>
            </div>
            <div class="panel-body">
            	<% if @post.image_file_name %>
   			<%= image_tag @post.image.url(:medium) , class: "" %>
   			<% end %>
            </div>
            <div class="panel-body">
            	
               <%= @post.body %>
               
               <hr>
               <div role="group" aria-label="..." class="btn-group">
                  <button type="button" class="btn btn-default">
                     <em class="fa fa-facebook text-muted"></em>
                  </button>
                  <button type="button" class="btn btn-default">
                     <em class="fa fa-twitter text-muted"></em>
                  </button>
                  <button type="button" class="btn btn-default">
                     <em class="fa fa-google-plus text-muted"></em>
                  </button>
                  <button type="button" class="btn btn-default">
                     <em class="fa fa-tumblr text-muted"></em>
                  </button>
                  <button type="button" class="btn btn-default">
                     <em class="fa fa-pinterest text-muted"></em>
                  </button>
                  <button type="button" class="btn btn-default">
                     <em class="fa fa-share-alt text-muted"></em>
                  </button>
               </div>
            </div>
         </div> 
		</div> 
</div>