<div id="post_content">
	<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		โพสเมื่อ : <%= time_ago_in_words(@post.created_at) %>
	</p>
	<p class="body">
		<%= @post.body %>
	</p>
	<%= link_to 'แก้ไข' , edit_post_path(@post) %>
	<%= link_to 'ลบ' , post_path(@post), method: :delete, data: { confirm: 'ต้องการลบ'} %>
</div>