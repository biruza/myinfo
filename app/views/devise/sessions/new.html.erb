<h3>เข้าสู่ระบบ</h3>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">

      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label "อีเมล์", class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"  %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
            <%= f.label "รหัสผ่าน", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off" , class: "form-control"  %>
            </div>
            </div>
          </fieldset>

          <% if devise_mapping.rememberable? -%>
            <fieldset>
            <div class="form-group">
              <div class="col-sm-2"> 
              </div>
              <div class="col-sm-10">
                <%= f.check_box :remember_me, class: " " %>
                <%= f.label "จำไว้ในระบบ" , class: " "  %>
              </div>
            </div>
          </fieldset>
          <% end -%>

          <fieldset>
            <div class="form-group">
              <div class="col-sm-2"> 
              </div>
              <div class="col-sm-10">
                <%= f.submit "ยืนยัน"  ,  :class => 'btn btn-primary' %>
              </div>
            </div>
          </fieldset>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>