<h3>สมัครสมาชิก</h3>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">

      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <fieldset>
            <div class="form-group">
              <%= f.label 'อีเมล์', class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control' %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
              <%= f.label 'รหัสผ่าน', class: "col-sm-2 control-label" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> อักษรเป็นอย่างน้อย)</em>
              <% end %>
              <div class="col-sm-10">
                <%= f.password_field :password, autocomplete: "off" , class: 'form-control' %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
              <%= f.label 'ยืนยันรหัสผ่าน', class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control' %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
              <%= f.label 'ชื่อ', class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :firstname,required: true, class: 'form-control' %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
            <%= f.label 'นามสกุล', class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :surname,required: true, class: 'form-control' %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
              <%= f.label 'รูปประกอบ', class: 'col-sm-2 control-label'  %>
              <div class="col-sm-10">
                  <%= f.file_field :avatar , class: 'form-control' %>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-group">
              <div class="col-sm-2"> 
              </div>
              <div class="col-sm-10">
                <%= f.submit "สมัคร" ,  :class => 'btn btn-primary' %>
              </div>
            </div>
          </fieldset>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>